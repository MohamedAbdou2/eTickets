@model Cinema

@{
    ViewData["Title"] = "Update Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <img id="CinemaLogoPreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="CinemaLogo" class="control-label"></label>
                        <input asp-for="CinemaLogo" class="form-control" />
                        <span asp-validation-for="CinemaLogo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById("CinemaLogoPreview");
            output.src = $("#CinemaLogo").val();
        })
        $("#CinemaLogo").on("change", function () {
            var output = document.getElementById("CinemaLogoPreview");
            output.src = $(this).val();
        })
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
